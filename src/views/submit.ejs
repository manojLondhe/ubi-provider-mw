<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        font-family: Calibri, Helvetica, sans-serif;
        background-color: #fff;
      }
      .container {
        padding: 20px;
        background-color: #fff;
      }
      input,
      textarea,
      select {
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: 1px solid #d5d5d5;
        background: #ffff;
      }
      input:focus,
      select:focus {
        background-color: #ffff;
        outline: none;
      }
      div {
        padding: 10px 0;
      }
      hr {
        border: 1px solid #605f5f;
        margin-bottom: 25px;
      }
      .registerbtn {
        background-color: #e6eee6;
        color: white;
        padding: 16px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
      }
      .registerbtn:hover {
        opacity: 1;
      }
      button {
        background-color: #3c5fdd; /* Set the background color to #3C5FDD */
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 25px; /* Make the button rounded */
        cursor: pointer;
        font-size: 16px;
        width: 100%;
        margin-top: 20px;
      }

      button:hover {
        background-color: #3451c9; /* A slightly darker shade for hover effect */
      }
      .gender-section {
        display: inline-flex;
      }
      .gender-section input[type="radio"] {
        margin: 2px 20px;
      }
    </style>
  </head>
  <body>
    <form
      action="http://localhost:4000/application-init/<%= item_id %>/<%= transaction_id %>"
      method="post"
    >
      <div class="container">
        <center>
          <h2>Please fill out the form</h2>
        </center>
        <hr />
        <!-- Fields based on your request -->
        <label>First Name:</label>
        <input
          type="text"
          name="first_name"
          placeholder="First Name"
          required="true"
        />
        <label>Last Name:</label>
        <input
          type="text"
          name="last_name"
          placeholder="Last Name"
          required="true"
        />
        <label>Father's Name:</label>
        <input
          type="text"
          name="father_name"
          placeholder="Father's Name"
          required="true"
        />
        <label>Samagra ID:</label>
        <input
          type="text"
          name="samagra_id"
          placeholder="Samagra ID"
          required="true"
        />

        <label>Class:</label>
        <select class="large-select" name="class" required>
          <option value="9">9</option>
          <option value="10">10</option>
        </select>

        <label>Resident Type:</label>
        <select class="large-select" name="resident_type" required>
          <option value="Dayscholar">Dayscholar</option>
          <option value="Hosteler">Hosteller</option>
        </select>


        <label>Aadhaar:</label>
        <input
          type="text"
          name="aadhaar"
          placeholder="Aadhaar"
          required="true"
        />
        <label>Marks of Previous Class:</labelresident_type>
        <input
          type="number"
          name="marks_previous_class"
          placeholder="Marks of Previous Class"
          required="true"
          step="0.01"
        />
        <label>Caste:</label>
        <input type="text" name="caste" placeholder="Caste" required="true" />

        <label>Current School Name:</label>
        <input
          type="text"
          name="current_school_name"
          placeholder="Current School Name"
          required="true" 
          <label>Phone:</label>
        <input
          type="text"
          name="phone"
          placeholder="Phone Number"
          pattern="^(?:\+?91)?[6-9]\d{9}$"
          required="true"
        />
        <label>Gender:</label>
        <div class="gender-section">
        <input type="radio" value="Male" name="gender" checked="" /> Male
        <input type="radio" value="Female" name="gender" /> Female
        <input type="radio" value="Other" name="gender" /> Other
        </div>
        <center><button type="submit">Submit</button></center>
      </div>
    </form>
  </body>
</html>
